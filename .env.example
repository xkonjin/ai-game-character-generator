# OpenAI API Key (for DALL-E image generation)
OPENAI_API_KEY=sk-your-openai-key-here

# Google Cloud Project (for Veo video generation)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Tripo AI API Key (for 3D rigging)
TRIPO_API_KEY=your-tripo-key-here

# Meshy AI API Key (alternative 3D generation - free tier available)
# Get key at: https://www.meshy.ai/settings/api
MESHY_API_KEY=your-meshy-key-here

# Optional: Alternative image generation
STABILITY_API_KEY=your-stability-key-here
PIXELLAB_API_KEY=your-pixellab-key-here

# Output settings
OUTPUT_DIR=./output
DEFAULT_STYLE=pixel
DEFAULT_RESOLUTION=512
